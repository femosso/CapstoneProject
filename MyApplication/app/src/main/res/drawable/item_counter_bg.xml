<?xml version="1.0" encoding="utf-8"?>

<!--
If it is needed to add a rounded corner border layout, see the link below:
http://tips.androidhive.info/2013/09/android-layout-rounded-corner-border/
-->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid android:color="@color/counter_text_bg"></solid>

    <!-- If you want to add some padding -->
    <padding
        android:left="3dp"
        android:right="3dp"></padding>

    <!-- Here is the corner radius -->
    <corners android:radius="2dp"></corners>

</shape>